generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model Comanda {
  id           String   @id @default(uuid())
  nomeCliente  String
  dataCriacao  DateTime @default(now())
  numeroMesa   Int
  finalizada   Boolean @default(false)
  pedidos      Pedido[]
  chamados     Chamado[]
}

model Pedido {
  id                 String      @id @default(uuid())
  comandaId          String
  status             StatusPedido
  dataCriacao        DateTime    @default(now())
  ultimaAtualizacao  DateTime    @updatedAt

  comanda            Comanda     @relation(fields: [comandaId], references: [id])
  itens              PedidoItem[]
}

model PedidoItem {
  id          String   @id @default(uuid())
  pedidoId    String
  itemId      String
  quantidade  Int
  observacao  String?
  dataCriacao DateTime @default(now())

  pedido      Pedido   @relation(fields: [pedidoId], references: [id])
  item        Item     @relation(fields: [itemId], references: [id])
}

model Item {
  id          String   @id @default(uuid())
  nome        String
  descricao   String
  preco       Float
  imageURL    String
  categoria   Categoria
  disponivel  Boolean @default(true)

  pedidoItens PedidoItem[]
}


model Variavel {
  id          String   @id @default(uuid())
  chave       String   @unique
  valor       String
}

model Chamado {
  id                 String      @id @default(uuid())
  comandaId          String
  finalizado         Boolean     @default(false)
  dataChamado        DateTime    @default(now())

  comanda            Comanda     @relation(fields: [comandaId], references: [id])
}

enum StatusPedido {
  EM_ANDAMENTO
  ENTREGUE
  FINALIZADO
  CANCELADO
}

enum Categoria {
  ENTRADAS
  PRATOS_CASA
  PEIXES
  CARNES
  BEBIDAS
  SOBREMESAS
}